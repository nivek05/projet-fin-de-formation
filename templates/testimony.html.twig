{% extends 'home.html.twig' %}
{% block main %}
<main>
    <div><hr></div>
    {# SECTION Testimony #}
    {% for article in articleTestimony %}
        {% if article.getSection.getSectionClass != 'section-carousel' %}
    <section class="section-testimony">
        <h2>{{ article.getArticleTitle }}</h2>
        <div>
            {% if article.getArticleImage != '' %}
             <div class="background-opacity"></div>
                <img src="{{ asset('images/pictures/'~article.getArticleImage ) }}" alt="{{ article.getArticleImage() }}">
            {% endif %}
            <article>
            {{ article.getArticleContent|raw }}
            </article>
        </div>
    </section>
        {% endif %}
    {% endfor %}
    {# carousel display #}
    <section class="section-testimony">
        <div id="carousel">
           <h2> AUTRES TEMOIGNAGES</h2>
            <div class="carousel-control">
                <button class="slide-next">
                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="32" height="32" viewBox="0 0 32 32" role="img">
    				<path d="m9.9 31c-2.03-0.108-3.01-2.54-1.62-4.03l10.4-10.8-10.4-11c-2.34-2.26 1.13-5.73 3.39-3.39l12 12.6c0.903 0.904 0.937 2.36 0.0775 3.3l-12 12.5c-0.483 0.548-1.19 0.846-1.92 0.808z"></path>
    			    </svg>
    			</button>
                <button class="slide-prev">
                    <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="32" height="32" viewBox="0 0 32 32" role="img">
    				<path d="m22.1 31c2.03-0.108 3.01-2.54 1.62-4.03l-10.4-10.8 10.4-11c2.34-2.26-1.13-5.73-3.39-3.39l-12 12.6c-0.903 0.904-0.937 2.36-0.0775 3.3l12 12.5c0.483 0.548 1.19 0.846 1.92 0.808z"></path>
    			    </svg>
    			</button>
            </div>
            <div id="carousel-items">
                {# Default active image #}
                <div class="carousel-item active">
                    <figure>
                        <img src="images/pictures/alejandro-tocornal-DnbKhtkTboo-unsplash.jpg" alt="alejandro-tocornal">
                        <figcaption>
                             Julie Ã  su me redonner confiance ..... Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nihil, vel nobis pariatur excepturi esse modi.
                        </figcaption>
                    </figure>
                </div>
                {# retrieval of articles in the loop #}
                {% for article in articleTestimony %}
                {% if article.getSection.getSectionClass == 'section-carousel' %}
                <div class="carousel-item">
                    <figure>
                        {% if article.getArticleImage != '' %}
                        <img src="{{ asset('images/pictures/'~article.getArticleImage ) }}" alt="{{ article.getArticleImage() }}">
                        {% endif %}
                        <figcaption>
                             {{ article.getArticleContent|raw }}
                        </figcaption>
                    </figure>
                </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>
    <div><hr></div>
</main>
{% endblock %}

